{
  "nodeParts": {
    "wrapper": {
      "tag": "div",
      "className": "library"
    },
    "settings": {
      "tag": "div",
      "className": "settings",
      "c": {
        "libHeader": {
          "tag": "div",
          "c": {
            "text": {
              "tag": "h1",
              "className": "mainHeader",
              "textContent": "My Library"
            }
          }
        },
        "toggleTheme": {
          "tag": "label",
          "textContent": "Lights Off",
          "c": {
            "toggler": {
              "tag": "input",
              "type": "checkbox",
              "id": "lightSwitch"
            }
          }
        },
        "cardBtn": {
          "tag": "button",
          "id": "toggleCard",
          "className": "toggleCard",
          "title": "View as cards",
          "disabled": "true"
        },
        "tableBtn": {
          "tag": "button",
          "className": "toggleTable",
          "id": "toggleTable",
          "title": "View as table"
        }
      }
    },
    "statistics": {
      "tag": "div",
      "className": "statistics",
      "c": {
        "statHeader": {
          "tag": "h2",
          "textContent": "Statistics"
        },
        "booksNum": {
          "tag": "p",
          "className": "field",
          "c": {
            "title": {
              "tag": "span",
              "className": "title",
              "textContent": "Books in the library: "
            },
            "value": {
              "tag": "span",
              "className": "value",
              "id": "booksNum"
            }
          }
        },
        "readNum": {
          "tag": "p",
          "className": "field",
          "c": {
            "title": {
              "tag": "span",
              "className": "title",
              "textContent": "Read books: "
            },
            "value": {
              "tag": "span",
              "className": "value",
              "id": "readNum"
            }
          }
        },
        "pagesNum": {
          "tag": "p",
          "className": "field",
          "c": {
            "title": {
              "tag": "span",
              "className": "title",
              "textContent": "Total pages: "
            },
            "value": {
              "tag": "span",
              "className": "value",
              "id": "pagesNum"
            }
          }
        }
      }
    },
    "content": {
      "tag": "div",
      "className": "content"
    },
    "cardView": {
      "tag": "div",
      "className": "cards",
      "id": "view",
      "c": {
        "card": {
          "tag": "div",
          "className": "card",
          "c": {
            "vLine": {
              "tag": "div",
              "className": "vline"
            },
            "icon": {
              "tag": "div",
              "className": "icon"
            },
            "id": {
              "tag": "p",
              "className": "id",
              "textContent": "Book id: "
            },
            "title": {
              "tag": "h2",
              "className": "title"
            },
            "author": {
              "tag": "p",
              "className": "authorWrap",
              "c": {
                "preposition": {
                  "tag": "span",
                  "textContent": "by "
                },
                "title": {
                  "tag": "span",
                  "className": "author"
                }
              }
            },
            "publish": {
              "tag": "p",
              "c": {
                "title": {
                  "tag": "span",
                  "textContent": "published on "
                },
                "date": {
                  "tag": "span",
                  "className": "publish result"
                }
              }
            },
            "pages": {
              "tag": "span",
              "className": "pages",
              "title": "Number of pages"
            },
            "start": {
              "tag": "p",
              "c": {
                "title": {
                  "tag": "span",
                  "textContent": "Start: "
                },
                "date": {
                  "tag": "span",
                  "className": "start result"
                }
              }
            },
            "finish": {
              "tag": "p",
              "c": {
                "title": {
                  "tag": "span",
                  "textContent": "Finish: "
                },
                "date": {
                  "tag": "span",
                  "className": "finish result"
                }
              }
            },
            "created": {
              "tag": "p",
              "c": {
                "title": {
                  "tag": "span",
                  "textContent": "Book added: "
                },
                "date": {
                  "tag": "span",
                  "textContent": "result"
                }
              }
            },
            "isRead": {
              "tag": "input",
              "type": "checkbox",
              "className": "isRead"
            },
            "manage": {
              "tag": "div",
              "c": {
                "edit": {
                  "tag": "button",
                  "className": "edit",
                  "title": "Edit book"
                },
                "delete": {
                  "tag": "button",
                  "className": "delete",
                  "title": "Delete book"
                }
              }
            }
          }
        }
      }
    },
    "tableView": {
      "tag": "table",
      "className": "table",
      "id": "view",
      "c": {
        "tableHeaders": {
          "tag": "tr",
          "className": "tableRow",
          "c": {
            "headers": {
              "tag": "th",
              "className": "tableHeader",
              "s": [
                "Book id",
                "Author",
                "Book title",
                "Publish date",
                "Pages",
                "Start reading",
                "Finish reading",
                "Status",
                "Created at",
                "Actions"
              ]
            }
          }
        },
        "tableRows": {
          "tag": "tr",
          "className": "tableData",
          "c": {
            "tableData": {
              "tag": "td",
              "className": "tableData"
            },
            "isRead": {
              "tag": "input",
              "className": "isRead",
              "type": "checkbox"
            },
            "actions": {
              "tag": "td",
              "className": "tableData",
              "c": {
                "edit": {
                  "tag": "button",
                  "className": "edit"
                },
                "delete": {
                  "tag": "button",
                  "className": "delete"
                }
              }
            }
          }
        }
      }
    },
    "addBookForm": {
      "tag": "dialog",
      "className": "dialog",
      "id": "dialog",
      "c": {
        "form": {
          "tag": "form",
          "className": "addBookForm",
          "name": "addBookForm",
          "c": {
            "formHeader": {
              "tag": "h2",
              "className": "header",
              "textContent": "Add a Book"
            },
            "formFields": {
              "tag": "label",
              "c": {
                "name": {
                  "tag": "span",
                  "textContent": [
                    "Book author:",
                    "Book title:",
                    "Pages number:",
                    "Publish date:",
                    "Start reading:",
                    "Finish reading:",
                    "I've finished reading the book:"
                  ]
                },
                "content": {
                  "tag": "input",
                  "type": [
                    "text",
                    "text",
                    "number",
                    "date",
                    "date",
                    "date",
                    "checkbox"
                  ],
                  "id": [
                    "author",
                    "title",
                    "pages",
                    "publish",
                    "start",
                    "finish",
                    "isRead"
                  ],
                  "required": [
                    "true",
                    "true",
                    "true",
                    "false",
                    "false",
                    "false",
                    "false"
                  ]
                }
              }
            },
            "buttons": {
              "tag": "div",
              "c": {
                "saveBtn": {
                  "tag": "button",
                  "className": "save",
                  "id": "save"
                },
                "cancelBtn": {
                  "tag": "button",
                  "className": "cancel",
                  "id": "cancel",
                  "type": "button"
                }
              }
            }
          }
        }
      }
    },
    "addBookBtn": {
      "tag": "button",
      "textContent": "Add Book",
      "className": "addBookBtn",
      "id": "addBook"
    },
    "confirmDelete": {
      "tag": "dialog",
      "className": "dialog",
      "id": "deleteDialog",
      "c": {
        "confirmation": {
          "tag": "h2",
          "textContent": "Are you sure you want to delete a book from your library?"
        },
        "buttons": {
          "tag": "div",
          "c": {
            "saveBtn": {
              "tag": "button",
              "className": "save",
              "id": "delete",
              "type": "submit"
            },
            "cancelBtn": {
              "tag": "button",
              "className": "cancel",
              "id": "skip",
              "type": "button"
            }
          }
        }
      }
    }
  },
  "tools": {
    "captions": [
      "id",
      "author",
      "title",
      "publish",
      "pages",
      "start",
      "finish",
      "isRead",
      "created"
    ],
    "editableFields": [
      ["author", "text", "required"],
      ["title", "text", "required"],
      ["publish", "date"],
      ["pages", "number", "required"],
      ["start", "date"],
      ["finish", "date"]
    ],
    "changeableBtns": {
      "update": "edit",
      "del": "delete",
      "store": "save",
      "abort": "cancel"
    },
    "titles": {
      "isRead": {
        "true": "The book was read",
        "false": "The book has not been read yet."
      }
    }
  }
}
