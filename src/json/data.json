{
  "nodeParts": {
    "wrapper": {
      "tag": "div",
      "className": "library"
    },
    "settings": {
      "tag": "div",
      "className": "settings",
      "c": {
        "libHeader": {
          "tag": "div",
          "c": {
            "image": {
              "tag": "img"
            },
            "text": {
              "tag": "span",
              "textContent": "My Library"
            }
          }
        },
        "toggleTheme": {
          "tag": "label",
          "textContent": "Lights Off",
          "c": {
            "toggler": {
              "tag": "input",
              "type": "checkbox",
              "id": "lightSwitch"
            }
          }
        },
        "cardBtn": {
          "tag": "button",
          "id": "toggleCard",
          "disabled": "true"
        },
        "tableBtn": {
          "tag": "button",
          "id": "toggleTable"
        }
      }
    },
    "statistics": {
      "tag": "div",
      "className": "statistics",
      "c": {
        "statHeader": {
          "tag": "h2",
          "textContent": "Statistics"
        },
        "fields": {
          "s": {
            "names": [
              "Books in the library: ",
              "Read books: ",
              "Total pages",
              "Forgotten books"
            ],
            "ids": ["booksNum", "readNum", "pagesNum", "forgotNum"]
          },
          "tag": "p",
          "className": "field",
          "c": {
            "title": {
              "tag": "span",
              "className": "title"
            },
            "value": {
              "tag": "span",
              "className": "value"
            }
          }
        }
      }
    },
    "cardView": {
      "tag": "div",
      "className": "cards",
      "id": "view",
      "c": {
        "card": {
          "tag": "div",
          "className": "card",
          "c": {
            "id": {
              "tag": "span",
              "className": "id",
              "textContent": "Book id: "
            },
            "author": {
              "tag": "span",
              "className": "author"
            },
            "title": {
              "tag": "p",
              "c": {
                "preposition": {
                  "tag": "span",
                  "textContent": "by "
                },
                "title": {
                  "tag": "span",
                  "className": "title"
                }
              }
            },
            "publish": {
              "tag": "div",
              "c": {
                "title": {
                  "tag": "span",
                  "textContent": "published on "
                },
                "date": {
                  "tag": "span",
                  "className": "publish"
                }
              }
            },
            "pages": {
              "tag": "span",
              "className": "pages"
            },
            "start": {
              "tag": "p",
              "c": {
                "title": {
                  "tag": "span",
                  "textContent": "Start: "
                },
                "date": {
                  "tag": "span",
                  "className": "start"
                }
              }
            },
            "finish": {
              "tag": "p",
              "c": {
                "title": {
                  "tag": "span",
                  "textContent": "Finish: "
                },
                "date": {
                  "tag": "span",
                  "className": "finish"
                }
              }
            },
            "created": {
              "tag": "p",
              "c": {
                "title": {
                  "tag": "span",
                  "textContent": "Book added:"
                },
                "date": {
                  "tag": "span"
                }
              }
            },
            "isRead": {
              "tag": "input",
              "type": "checkbox"
            },
            "manage": {
              "tag": "div",
              "c": {
                "edit": {
                  "tag": "button",
                  "className": "edit"
                },
                "delete": {
                  "tag": "button",
                  "className": "delete"
                }
              }
            }
          }
        }
      }
    },
    "tableView": {
      "tag": "table",
      "className": "table",
      "id": "view",
      "c": {
        "tableHeaders": {
          "tag": "tr",
          "className": "tableRow",
          "c": {
            "headers": {
              "tag": "th",
              "className": "tableHeader",
              "s": [
                "Book id",
                "Author",
                "Book title",
                "Publish date",
                "Pages",
                "Start reading",
                "Finish reading",
                "Status",
                "Created at",
                "Actions"
              ]
            }
          }
        },
        "tableRows": {
          "tag": "tr",
          "className": "tableData",
          "c": {
            "tableData": {
              "tag": "td",
              "className": "tableData"
            },
            "isRead": {
              "tag": "input",
              "type": "checkbox"
            },
            "actions": {
              "tag": "td",
              "className": "tableData",
              "c": {
                "edit": {
                  "tag": "button",
                  "className": "edit"
                },
                "delete": {
                  "tag": "button",
                  "className": "delete"
                }
              }
            }
          }
        }
      }
    },
    "addBookForm": {
      "tag": "dialog",
      "className": "addBookForm",
      "id": "dialog",
      "c": {
        "form": {
          "tag": "form",
          "className": "addBookForm",
          "c": {
            "formHeader": {
              "tag": "h2",
              "textContent": "Please, add the Book"
            },
            "formFields": {
              "tag": "label",
              "c": {
                "name": {
                  "tag": "span",
                  "textContent": [
                    "Book author:",
                    "Book title:",
                    "Pages number:",
                    "Publish date:",
                    "Start reading:",
                    "Finish reading:",
                    "I've finished reading the book:"
                  ]
                },
                "content": {
                  "tag": "input",
                  "type": [
                    "text",
                    "text",
                    "number",
                    "date",
                    "date",
                    "date",
                    "checkbox"
                  ],
                  "id": [
                    "author",
                    "title",
                    "pages",
                    "publish",
                    "start",
                    "finish",
                    "isRead"
                  ]
                }
              }
            },
            "buttons": {
              "tag": "div",
              "c": {
                "cancelBtn": {
                  "tag": "button",
                  "className": "cancel",
                  "id": "cancel",
                  "type": "button"
                },
                "saveBtn": {
                  "tag": "button",
                  "className": "save",
                  "id": "save",
                  "type": "button"
                }
              }
            }
          }
        }
      }
    },
    "addBookBtn": {
      "tag": "button",
      "textContent": "Add Book",
      "className": "addBookBtn",
      "id": "addBook"
    }
  },
  "tools": {
    "captions": [
      "id",
      "author",
      "title",
      "publish",
      "pages",
      "start",
      "finish",
      "isRead",
      "created"
    ],
    "editableFields": [
      ["author", "text"],
      ["title", "text"],
      ["publish", "date"],
      ["pages", "number"],
      ["start", "date"],
      ["finish", "date"]
    ],
    "changeableBtns": {
      "update": "edit",
      "del": "delete",
      "store": "save",
      "abort": "cancel"
    }
  }
}
