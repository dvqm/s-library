{
  "additionalSettings": {
    "captions": [
      "id",
      "author",
      "title",
      "publish",
      "pages",
      "start",
      "finish",
      "isRead",
      "created"
    ]
  },
  "cardView": {
    "tag": "div",
    "className": "cards",
    "id": "cardView",
    "c": {
      "card": {
        "tag": "div",
        "className": "card",
        "c": {
          "id": {
            "tag": "span",
            "className": "id",
            "textContent": "Book id: "
          },
          "author": {
            "tag": "span",
            "className": "author"
          },
          "title": {
            "tag": "p",
            "className": "title",
            "c": {
              "preposition": {
                "tag": "span",
                "textContent": "by "
              },
              "title": {
                "tag": "span",
                "className": "title"
              }
            }
          },
          "publish": {
            "tag": "div",
            "className": "published",
            "c": {
              "title": {
                "tag": "span",
                "textContent": "published on "
              },
              "date": {
                "tag": "span"
              }
            }
          },
          "pages": {
            "tag": "span",
            "className": "pageNumber"
          },
          "start": {
            "tag": "p",
            "c": {
              "title": {
                "tag": "span",
                "textContent": "Start: "
              },
              "date": {
                "tag": "span"
              }
            }
          },
          "finish": {
            "tag": "p",
            "c": {
              "title": {
                "tag": "span",
                "textContent": "Finish: "
              },
              "date": {
                "tag": "span"
              }
            }
          },
          "created": {
            "tag": "p",
            "c": {
              "title": {
                "tag": "span",
                "textContent": "Book added:"
              },
              "date": {
                "tag": "span"
              }
            }
          },
          "isRead": {
            "tag": "input",
            "type": "checkbox"
          },
          "manage": {
            "tag": "div",
            "c": {
              "edit": {
                "tag": "button"
              },
              "delete": {
                "tag": "button"
              }
            }
          }
        }
      }
    }
  },
  "tableView": {
    "tag": "table",
    "className": "tableView",
    "id": "table",
    "c": {
      "tableHeaders": {
        "tag": "tr",
        "className": "tableRow",
        "c": {
          "headers": {
            "tag": "th",
            "className": "tableHeader",
            "s": [
              "Book id",
              "Author",
              "Book title",
              "Publish date",
              "Pages",
              "Start reading",
              "Finish reading",
              "Status",
              "Created at",
              "Actions"
            ]
          }
        }
      },
      "tableRows": {
        "tag": "tr",
        "className": "tableData",
        "c": {
          "tableData": {
            "tag": "td",
            "className": "tableData"
          },
          "isRead": {
            "tag": "input",
            "type": "checkbox"
          },
          "actions": {
            "tag": "td",
            "className": "tableData",
            "c": {
              "edit": {
                "tag": "button"
              },
              "delete": {
                "tag": "button"
              }
            }
          }
        }
      }
    }
  },
  "statFields": {
    "tag": "div",
    "className": "statistics",
    "c": {
      "header": {
        "tag": "h2",
        "className": "header",
        "textContent": "Statistics"
      },
      "field": {
        "s": {
          "names": [
            "Books in the library: ",
            "Read books: ",
            "Total pages",
            "Forgotten books"
          ],
          "ids": ["booksNum", "readNum", "pagesNum", "forgotNum"]
        },
        "tag": "p",
        "className": "field",
        "c": {
          "title": {
            "tag": "span",
            "className": "title"
          },
          "value": {
            "tag": "span",
            "className": "value"
          }
        }
      }
    }
  },
  "formFields": {
    "tag": "label",
    "c": {
      "name": {
        "tag": "span",
        "textContent": [
          "Book author:",
          "Book title:",
          "Pages number:",
          "Publish date:",
          "Start reading:",
          "Finish reading:",
          "I've finished reading the book:"
        ]
      },
      "content": {
        "tag": "input",
        "type": ["text", "text", "number", "date", "date", "date", "checkbox"],
        "id": [
          "author",
          "title",
          "pages",
          "publish",
          "start",
          "finish",
          "isRead"
        ]
      }
    }
  }
}
